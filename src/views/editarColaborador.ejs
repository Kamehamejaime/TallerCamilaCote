    <header>
        <div class="container-fluid d-flex justify-content-start align-content-center align-items-center">
            <img id="logo" src="/src/public/img/logo.png" alt="Logo" width="100px" height="100px"
                class="d-inline-block align-text-center mt-auto">
            <h1 id="empresa">Taller de prestación de servicios en confección y planchado Camila Coté</h1>
        </div>
    </header>
<%- include('templates/navbar') %>
<div class="container" >
    <h1>Editar Colaborador</h1>
    
    <form action="/colaboradores/<%= colaborador.ColaboradoresId %>/editar" method="post">
        <label for="rut">Rut:</label>
        <input class="form-control" placeholder="<%= colaborador.Rut %>" type="text" name="Rut" value="<%= colaborador.Rut %>">
        <br>
        <label for="nombre">Nombre:</label>
        <input class="form-control" placeholder="<%= colaborador.Nombre%>" type="text" name="Nombre" value="<%= colaborador.Nombre %>">
        <br>
        <label for="telefono">Teléfono:</label>
        <input class="form-control" type="text" name="Telefono" value="<%= colaborador.Telefono %>">
        <br>
        <label for="numeroCuenta">Número de Cuenta:</label>
        <input class="form-control" type="text" name="NumeroCuenta" value="<%= colaborador.NumeroCuenta %>">
        <br>
        <label for="tipoCuenta">Tipo de Cuenta:</label>
        <input class="form-control" type="text" name="TipoCuenta" value="<%= colaborador.TipoCuenta %>">
        <br>
        <label for="banco">Banco:</label>
        <input class="form-control" type="text" name="Banco" value="<%= colaborador.Banco %>">
        <br>
        <button class="btn btn-primary" type="submit">Actualizar</button>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
